<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_centerInParent="true"
            app:srcCompat="@mipmap/logo" />


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#2962FF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:onClick="add_new_task"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:srcCompat="@drawable/add"
            tools:srcCompat="@drawable/add" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Add New Task" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#2962FF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_vertical"
        android:minHeight="48dp"
        android:onClick="today_task"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:srcCompat="@drawable/todo_list_64px"
            tools:srcCompat="@drawable/todo_list_64px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Today Task" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:onClick="weekly_task"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:srcCompat="@drawable/todo_list_64px"
            tools:srcCompat="@drawable/todo_list_64px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Weekly Tasks" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:onClick="all_task"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:srcCompat="@drawable/todo_list_64px"
            tools:srcCompat="@drawable/todo_list_64px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="All Tasks" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#2962FF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:onClick="navSearch"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:srcCompat="@drawable/search_in_list_48px"
            tools:srcCompat="@drawable/search_in_list_48px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Search" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#2962FF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:onClick="navProfile"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:srcCompat="@drawable/contacts_64px"
            tools:srcCompat="@drawable/contacts_64px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Profile" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#2962FF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:onClick="navLogout"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:srcCompat="@drawable/logout"
            tools:srcCompat="@drawable/logout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Logout" />
    </LinearLayout>


</LinearLayout>